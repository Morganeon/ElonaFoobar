locale {
    skill {
        gained = "あなたは「${_1}」の能力を得た。"

        default {
            increase = "${name(_1)}は${_2}の技術の向上を感じた。"
            decrease = "${name(_1)}は${_2}の技術の衰えを感じた。"
        }

        # HP
        _2 {
            increase = "${name(_1)}は生命力の上昇を感じた。"
            decrease = "${name(_1)}は生命力の衰えを感じた。"
        }

        # MP
        _3 {
            increase = "${name(_1)}はマナの向上を感じた。"
            decrease = "${name(_1)}はマナの衰えを感じた。"
        }

        # Strength
        _10 {
            increase = "${name(_1)}はより強くなった。"
            decrease = "${name(_1)}は少し贅肉が増えたような気がした。"
        }

        # Constitution
        _11 {
            increase = "${name(_1)}は我慢することの快感を知った。"
            decrease = "${name(_1)}は我慢ができなくなった。"
        }

        # Dexterity
        _12 {
            increase = "${name(_1)}は器用になった。"
            decrease = "${name(_1)}は不器用になった。"
        }

        # Perception
        _13 {
            increase = "${name(_1)}は世界をより身近に感じるようになった。"
            decrease = "${name(_1)}は感覚のずれを感じた。"
        }

        # Learning
        _14 {
            increase = "${name(_1)}は急に色々なことを学びたくなった。"
            decrease = "${name(_1)}の学習意欲が低下した。"
        }

        # Will
        _15 {
            increase = "${name(_1)}の意思は固くなった。"
            decrease = "${name(_1)}は何でもすぐ諦める。"
        }

        # Magic
        _16 {
            increase = "${name(_1)}は魔力の上昇を感じた。"
            decrease = "${name(_1)}は魔力の衰えを感じた。"
        }

        # Charisma
        _17 {
            increase = "${name(_1)}は周囲の視線を心地よく感じる。"
            decrease = "${name(_1)}は急に人前に出るのが嫌になった。"
        }

        # Speed
        _18 {
            increase = "${name(_1)}は周りの動きが遅く見えるようになった。"
            decrease = "${name(_1)}は遅くなった。"
        }

        # Luck
        _19 {
            increase = "${name(_1)}は幸運になった。"
            decrease = "${name(_1)}は不幸になった。"
        }
    }
}
