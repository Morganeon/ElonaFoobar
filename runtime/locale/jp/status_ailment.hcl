locale {
    status_ailment {
        blinded {
            apply = "${name(_1)}は盲目になった。"
            heal = "${name(_1)}は盲目から回復した。"
        }
        confused {
            apply = "${name(_1)}は混乱した。"
            heal = "${name(_1)}は混乱から回復した。"
        }
        paralyzed {
            apply = "${name(_1)}は麻痺した。"
            heal = "${name(_1)}は麻痺から回復した。"
        }
        poisoned {
            apply = "${name(_1)}は毒におかされた。"
            heal = "${name(_1)}は毒から回復した。"
        }
        sleep {
            apply = "${name(_1)}は眠りにおちた。"
            heal = "${name(_1)}は心地よい眠りから覚めた。"
        }
        fear {
            apply = "${name(_1)}は恐怖に侵された。"
            heal = "${name(_1)}は恐怖から立ち直った。"
        }
        dimmed {
            apply = "${name(_1)}は朦朧とした。"
            heal = "${name(_1)}の意識ははっきりした。"
        }
        bleeding {
            apply = "${name(_1)}は血を流し始めた。"
            heal = "${name(_1)}の出血は止まった。"
        }
        drunk {
            apply = "${name(_1)}は酔っ払った。"
            heal = "${name(_1)}の酔いは覚めた。"
        }
        insane {
            apply = "${name(_1)}は気が狂った。"
            heal = "${name(_1)}は正気に戻った。"
        }
        sick {
            apply = "${name(_1)}は病気になった。"
            heal = "${name(_1)}の病気は治った。"
        }
    }
}
